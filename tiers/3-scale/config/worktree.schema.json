{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIX Worktree Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "package_manager": {
      "type": "string",
      "enum": ["pnpm", "npm", "yarn", "bun", "none", "auto"]
    },
    "worktree_root": {
      "type": "string"
    },
    "branch_prefix": {
      "type": "string",
      "pattern": "^[A-Za-z0-9._/-]+$",
      "not": {
        "pattern": "\\.\\."
      }
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "path", "port_env", "base_port"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_-]+$"
          },
          "path": {
            "type": "string"
          },
          "port_env": {
            "type": "string"
          },
          "base_port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
          },
          "env_file": {
            "type": "string",
            "description": "Per-worktree env file (created with PORT offset)"
          },
          "shared_env": {
            "type": "string",
            "description": "Shared env file (symlinked to main worktree)"
          },
          "env_refs": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    },
    "symlinks": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["source", "target"],
            "properties": {
              "source": {
                "type": "string"
              },
              "target": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "post_setup": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "pre_cleanup": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "validate": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  },
  "required": ["services"]
}
